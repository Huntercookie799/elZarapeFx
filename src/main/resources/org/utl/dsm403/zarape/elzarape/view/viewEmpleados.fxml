<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.utl.dsm403.zarape.elzarape.controller.EmpleadosController">
    <VBox spacing="10">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <Label style="-fx-text-fill: #FA4032;" text="Empleados">
            <font>
                <Font name="League Spartan Bold" size="32.0" />
            </font>
        </Label>

        <Button prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: #FAAF08; -fx-text-fill: #FEF3E2;" text="+" />

        <TableView fx:id="tablaEmpleados" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colIdEmpleado" prefWidth="50" text="ID" />
                <TableColumn fx:id="colNombreEmpleado" prefWidth="200" text="Nombre" />
                <TableColumn fx:id="colPuesto" prefWidth="150" text="Puesto" />
                <TableColumn fx:id="colAcciones" prefWidth="100" text="Acciones" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
